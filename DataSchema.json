{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HumidityArtSocialDB",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "user_id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" }
      },
      "required": ["user_id", "name", "email"]
    },
    "activity": {
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date" },
        "humidity_level": { "type": "number", "minimum": 0, "maximum": 100 },
        "art_interest": { "type": "string" }
      },
      "required": ["date", "humidity_level"]
    }
  },
  "required": ["user", "activity"]
}
